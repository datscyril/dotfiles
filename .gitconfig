[user]
    name = Cyril Ghali
    email = cyril.ghali@epita.fr

[color]
    ui = true

[core]
    excludesfile = ~/.gitignore

[alias]
    st = status
    ci = commit -a
    b = branch
    bt = branch --track
    co = checkout
    cob = checkout -b
    cobt = checkout -b --track
    d = diff
    l = log
    lp = log -p
    ls = log --stat
    lr = log --raw
    lg = log --graph
    lo = log --pretty=oneline
    f = fetch
    ph = push
    pl = pull
    r = remote
    rs = remote show
    ra = remote add
    rd = remote del
    lsf = ls-files
    m = merge
    cl = clean -fd
    t = tag
    ui = update-index

[pager]
    status = false

[push]
    default = simple
    followTags = true

[merge]
    tool = fugitive

[mergetool "fugitive"]
    cmd = vim -f -c "Gvdiffsplit!" "$MERGED"

